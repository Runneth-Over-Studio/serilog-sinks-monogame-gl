<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<RootNamespace>RunnethOverStudio.SerilogSinksMonoGameGL</RootNamespace>
	<AssemblyName>RunnethOverStudio.SerilogSinksMonoGameGL</AssemblyName>
	<Copyright>© Runneth Over Studio, LLC</Copyright>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<RepositoryUrl>https://github.com/Runneth-Over-Studio/serilog-sinks-monogame-gl</RepositoryUrl>
	<Description>A Serilog sink that writes events to a MonoGame DrawableGameComponent.</Description>
	<Version>1.0.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.2.1105" />
    <PackageReference Include="Serilog" Version="4.0.2" />
  </ItemGroup>

</Project>
